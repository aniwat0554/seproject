<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView android:text="" android:layout_width="match_parent"
        android:background="#ff333333"
        android:layout_height="match_parent"
        android:clickable="false"
        android:textIsSelectable="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#fff8605f"/>
            <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/menu61"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>
            <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/more6"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="8dp"/>

        </RelativeLayout>
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="110dp"
        android:id="@+id/relativeLayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/aaa"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView13" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fff"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ddd"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/marker16"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/imageView14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="part"
            android:id="@+id/rectag"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unneccessary"
            android:id="@+id/test"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rectag"
            android:layout_toEndOf="@+id/rectag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TEST_NOTHING _HERE"
            android:id="@+id/textView4"
            android:autoText="false"
            android:textColor="#fffafbff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/test"
            android:layout_toStartOf="@+id/test" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/username"
            android:layout_gravity="center_horizontal|top"
            android:text="Sound&apos;s name"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_below="@+id/rectag"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/timecounter"
            android:layout_below="@+id/username"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tag"
            android:id="@+id/soundtag"
            android:layout_below="@+id/test"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/grid_Bottom">

        <Button
            android:layout_width="96dp"
            android:layout_height="91dp"
            android:id="@+id/btnSave"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/record" />

        <Button
            android:layout_width="96dp"
            android:layout_height="91dp"
            android:id="@+id/play"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/save" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Files"
            android:id="@+id/file"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>
